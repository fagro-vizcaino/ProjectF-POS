@page "/pos"
@inherits MainPosContainer


<div class="grid grid-cols-4 gap-2">
    <div class="px-2">
        <div class="grid grid-cols-2 gap-2 2xl:grid-cols-3 xl:gap-4">
            @foreach (var item in CategoryItems)
            {
                @*<div style='background-color:@($"#{GetItemColor()}")'
                 class="flex flex-col justify-between px-3 py-2 xl:px-6 xl:py-3 rounded-sm bg-gray-600">
                <div class="pt-2">
                    <div class="mb-2 text-xs text-white xl:text-base xl:font-semibold xl:leading-tight">@item.Name</div>
                </div>
                <div class="pt-4 xl:pt-6">
                    <span class="text-xs text-white xl:font-semibold xl:leading-tight">@item.NumberOfProducts items</span>
                </div>
            </div>*@
            
                <div style='background-color:@($"#{GetItemColor()}")'
                     class="h-35 xl:h-40 flex flex-col justify-between rounded-sm bg-gray-600 py-2 px-4 sm:py-2 sm:px-8 xl:py-2 xl:px-15">
                    <div class="pt-2">
                        <div class="text-xs text-white xl:text-base xl:font-semibold xl:leading-tight mb-2">
                            @item.Name
                        </div>
                    </div>
                    <div class="pt-4">
                        <span class="text-xs text-gray-400 xl:text-sm xl:font-semibold">@item.NumberOfProducts items</span>
                    </div>
                </div>    
            }
        </div>
    </div>
    <div class="col-span-2">
        <div class="grid grid-cols-3 gap-2 xl:grid-cols-4 2xl:grid-cols-4 xl:gap-4">
            @foreach (var item in MenuItems)
            {
                <div class="h-35 xl:h-40 flex flex-col justify-between rounded-sm bg-gray-600 py-2 px-4 sm:py-2 sm:px-8 xl:py-2 xl:px-15">
                    <div class="pt-2">
                        <div class="text-xs text-gray-400 xl:text-base xl:font-semibold xl:leading-tight xl:mb-2">
                        @item.QtySelected</div>
                    </div>

                    <div class="pt-2">
                        <div class="text-xs text-white xl:text-base xl:text-white xl:font-semibold xl:leading-tight xl:mb-2">
                        @item.Name</div>
                    </div>
                    <div class="pt-4">
                        <span class="text-xs text-gray-400 xl:text-sm xl:font-semibold">$@item.Price</span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="px-2">
        <div class="grid grid-cols-1">
            @foreach (var item in GetTableItems())
            {
                <div class="inline-grid grid-cols-4 xl:gap-3">
                    <div class="pt-1">
                        <span class="text-xs text-white font-semibold xl:font-medium 2xl:text-lg">
                            @($"{item.QtySelected}")
                        </span>
                    </div>
                    <div class="pt-1 col-span-2">
                        <div class="grid">
                            <div class="">
                                <span class="text-xs text-white xl:font-medium 2xl:font-semibold 2xl:text-lg">
                                @item.Name</span> 
                            </div>
                            <div class="py-1">
                                @foreach (var exceptions in item.Exceptions)
                                {
                                    <span class="text-xs text-gray-400 xl:font-semibold block">
                                        @exceptions.Name
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="pt-1 grid">
                        <span class="text-xs text-white xl:font-medium 2xl:font-semibold 2xl:text-lg">
                            @(item.Price * item.QtySelected)
                        </span>
                        <div class="py-1">
                            @foreach (var exception in item.Exceptions)
                            {
                                <span class="text-xs text-gray-400 xl:font-semibold block">
                                    @exception.Price
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
